@model Student



<a asp-controller="Student" asp-action="Index" class="btn btn-success">Back To List</a>
<div class="container mt-5">
    <h4 class="mb-4 text-center">Are you sure you want to delete this student?</h4>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Department</th>
                <th>Courses</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td>@Model.Age</td>
                <td>@(Model.Department?.Name ?? "N/A")</td>
                <td>
                    @if (Model.StuCrsRess != null && Model.StuCrsRess.Count > 0)
                    {
                        <ul class="mb-0">
                            @foreach (var crs in Model.StuCrsRess)
                            {
                                <li>@crs.Course.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No Courses</span>
                    }
                </td>
            </tr>
        </tbody>
    </table>
    <td><a asp-controller="Student" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger m-4">Yes</a></td>
    <td><a asp-controller="Student" asp-action="Index" class="btn btn-success m-4">No</a></td>
</div>