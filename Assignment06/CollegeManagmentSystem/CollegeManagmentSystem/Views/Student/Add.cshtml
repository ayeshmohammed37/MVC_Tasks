@model AddStudentViewModel
@{
    Layout = "_StudentLayout";

    SelectList deptOpteions = new SelectList(Model.Departments, "Id","Name");
}


<!-- /Student/SaveAdd?name=ahmed&age=18&DepartmentId=2 -->

<form method="post" asp-controller="Student" asp-action="SaveAdd">
    @* <div asp-validation-summary="ModelOnly"></div> *@
    <div class="mb-4">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="mb-4">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form form-control" />
        <span asp-validation-for="Age"></span>

    </div>
    <div class="mb-4">
        <label asp-for="DeptId"></label>
        <select asp-for="DeptId" class="form form-control" asp-items="deptOpteions"></select>
        <span asp-validation-for="DeptId"></span>

    </div>
    <button type="submit" asp-controller="Student" asp-action="SaveAdd" class="btn btn-primary mt-2 mb-2">
        Add
    </button>
</form>


