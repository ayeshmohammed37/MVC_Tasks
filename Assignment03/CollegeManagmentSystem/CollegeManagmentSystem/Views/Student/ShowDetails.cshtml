@model Student

<div class="container mt-5">
    <h2 class="mb-4 text-center">Student Info</h2>
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
                <th>Department</th>
                <th>Courses</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Age</td>
                <td>@(Model.Department?.Name ?? "N/A")</td>
                <td>
                    @if (Model.StuCrsRess != null && Model.StuCrsRess.Count > 0)
                    {
                        <ul class="mb-0">
                            @foreach (var crs in Model.StuCrsRess)
                            {
                                <li>@crs.Course.Name</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No Courses</span>
                    }
                </td>
            </tr>
        </tbody>
    </table>

    <a href="/Student/ShowAll" class="btn btn-secondary mt-5 mb-5">Back To List</a>
</div>